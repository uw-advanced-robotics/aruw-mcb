{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "SConstruct: debug build-tests",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/aruw-mcb-project",
            "module": "SCons",
            "args": ["build-tests", "profile=debug"],
            "justMyCode": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Tests",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "Build Tests - Debug",
            "program": "${workspaceFolder}/aruw-mcb-project/build/tests/scons-debug/aruw-mcb-tests.elf",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Debug Sim",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "Build Sim - Debug",
            "program": "${workspaceFolder}/aruw-mcb-project/build/sim/scons-debug/aruw-mcb.elf",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Debug MCB",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "openocd",
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "Program - Debug",
            "executable": "./aruw-mcb-project/build/hardware/scons-debug/aruw-mcb.elf",
            "device": "STM32F427II",
            "configFiles": [
                "./aruw-mcb-project/openocd.cfg"
            ]
        }
    ]
}